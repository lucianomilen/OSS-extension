{
  "name": "isMaintained",
  "version": "1.0.0",
  "description": "This extension provides an detail view of the maintenance level of GitHub projects. See https://arxiv.org/abs/1809.04041 for more.",
  "manifest_version": 2,
  "permissions": ["tabs", "https://github.com/*"],
  "background": {
        "scripts": ["firebase.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["style.css"],
      "js": ["jquery-3.3.1.min.js", "app.js"]
    }
  ],
  "web_accessible_resources": [
      "images/left-chevron.svg",
      "images/right-chevron.svg"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "page_action": {
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
}
